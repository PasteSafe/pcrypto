{
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "install",
      "args": ["install"]
    },
    {
      "taskName": "build",
      "args": ["run", "build", "-s"],
      "isBuildCommand": true
    },
    {
      "taskName": "test",
      "args": ["run", "test", "-s"]
    }
  ]
}
